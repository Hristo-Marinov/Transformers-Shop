@model ProductViewModel

@{
    ViewBag.Title = "Product Details";
}



<div class="container">
    <div class="row">
        <div class="col-md-6">
            <img src="@Model.Picture" class="img-fluid" alt="@Model.Name">
        </div>
        <div class="col-md-6">
            <h1>@Model.Name</h1>
            <p>@Model.Description</p>
            <p>Stock: @Model.StockCount</p>
            <p>
                Rating:
                @for (int i = 0; i < 5; i++)
                {
                    if (i < Model.Rating)
                    {
                        <span class="fa fa-star checked"></span>
                    }
                    else
                    {
                        <span class="fa fa-star"></span>
                    }
                }
            </p>
            <a href="@Url.Action("ProductList", "Products")" class="btn btn-primary">Back to List</a>
        </div>
    </div>
</div>

<style>
    .checked {
        color: orange;
    }
</style>
