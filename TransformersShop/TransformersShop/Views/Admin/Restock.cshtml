@model IEnumerable<TransformersShop.Models.ProductViewModel>

@{
    ViewBag.Title = "Restock Products";
}

<h2>Restock Products</h2>

<table class="table table-striped table-dark">
    <thead>
        <tr>
            <th>Product</th>
            <th>Current Stock</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Name</td>
                <td>@product.StockCount</td>
                <td>
                    <form asp-action="Restock" method="post" style="display:inline">
                        <input type="hidden" name="productId" value="@product.Id" />
                        <input type="number" name="stockCount" min="1" class="form-control d-inline" style="width: 100px;" />
                        <button type="submit" class="btn btn-primary">Restock</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
